<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.dalvarez.shop.shop_core.category.domain.model.Category" table="category">
        <composite-id name="id" class="org.dalvarez.shop.shop_core.shared.domain.category.CategoryId" access="field">
            <key-property name="value" column="id" type="string" length="36" access="field"/>
        </composite-id>

        <component name="name" class="org.dalvarez.shop.shop_core.category.domain.model.CategoryName" access="field">
            <property name="value" column="name" type="string" access="field"/>
        </component>
        <component name="parentId" class="org.dalvarez.shop.shop_core.shared.domain.category.CategoryId" access="field">
            <property name="value" column="parent_id" type="string" length="36" access="field"/>
        </component>
    </class>
</hibernate-mapping>